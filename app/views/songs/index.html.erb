<section class="container allsongs">
  <div class="row text-center">
    <h1>Songs</h1>

    <% @songs.each do |song| %>
      <h3><%= link_to song.title, song %></h3>
      <% if song.user.present? %>
        <p>Added by: <%= link_to song.user.handle, user_songs_path( song.user ) %></p>
      <% end %>
      <br>
    <% end %>

    <br>
    <% if user_signed_in? %>
      <h3><%= link_to "[New Song]", new_song_path %></h3>
    <% end %>
  </div>
</section>
